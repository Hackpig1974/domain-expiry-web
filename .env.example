# Domain Expiry API Configuration
# Copy this file to .env and edit with your settings

# Comma-separated list of domains to monitor
DOMAINS=google.com,ebay.com

# RDAP server URL (use rdap.org for best coverage)
RDAP_BASE=https://rdap.org/domain

# Enable python-whois fallback for TLDs not supported by RDAP
# Works for: .uk, .ca, .fr, .io, .ai
WHOIS_FALLBACK_ENABLED=false

# Optional: WhoisXML API key for ALL TLDs including .bz
# Get 500 free requests/month at https://whoisxmlapi.com
WHOISXML_API_KEY=

# Show alert when days remaining <= this value (default: 183 = 6 months)
ALERT_DAYS=183

# How often to refresh domain data from RDAP (in minutes)
# Default: 360 = 6 hours
REFRESH_MINUTES=360

# Timezone for logging and timestamps
TZ=America/Denver
